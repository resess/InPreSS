<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
 <extension
       point="org.eclipse.ui.commands">
       <command
             defaultHandler="corex.handler.SeparateVersionHandler"
             id="corex.command.runSeparateVersions"
             name="Run">
       </command>
 </extension>	
 <extension
         point="org.eclipse.ui.views">
      <category
            id="corex.category"
            name="Corex">
      </category>
      <view
            category="corex.category"
            class="corex.views.OldTraceView"
            icon="icons/check_mark.png"
            id="corex.evalView.oldTraceView"
            name="Old Trace"
            restorable="true">
      </view>
      <view
            category="corex.category"
            class="corex.views.NewTraceView"
            icon="icons/cross_mark.png"
            id="corex.evalView.newTraceView"
            name="New Trace"
            restorable="true">
      </view>
      <view
            category="corex.category"
            class="corex.views.StepPropertyView"
            icon="icons/property.png"
            id="corex.view.stepProperty"
            name="Step Properties"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="corex.perspectives.TraceComparisonPerspective"
            icon="icons/trace_comparison.png"
            id="corex.perspective.traceChecking"
            name="Trace Comparison">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu label="corex">        
            <command
                  commandId="corex.command.runSeparateVersions"
                  icon="icons/trace_comparison.png"
                  label="Run for Separate Versions"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="corex.toolbar">
            <command
                  commandId="corex.command.runSeparateVersions"
                  icon="icons/trace_comparison.png"
                  label="Run for Separate Versions"
                  style="push">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="corex.editors.CompareEditor"
            default="false"
            extensions=".java"
            icon="icons/compare.png"
            id="corex.editor.compare"
            name="Compare">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.editors.documentProviders">
      <provider
            class="org.eclipse.ui.editors.text.TextFileDocumentProvider"
            id="org.eclipse.ui.editors.text.StorageDocumentProvider"
            inputTypes="org.eclipse.ui.IStorageEditorInput">
      </provider>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="corex.preference.CorexPreference"
            id="corex.preference"
            name="corex (Defects4j)">
      </page>
   </extension>

</plugin>
